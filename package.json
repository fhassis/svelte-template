{
  "name": "svelte-app",
  "version": "0.0.1",
  "scripts": {
    "dev:app": "rollup -c -w",
    "build:app": "rollup -c",
    "dev:bulma": "sass --no-source-map --style=compressed src/bulma.scss public/build/bulma.css --watch",
    "build:bulma": "sass --no-source-map --style=compressed src/bulma.scss public/build/bulma.full.css",
    "purge:bulma": "purgecss -css public/build/bulma.full.css -o public/build/bulma.css --content src/**/*.svelte node_modules/svelte/*.js",
    "clean:bulma": "del-cli public/build/bulma.full.css",
    "clean:all": "del-cli --force public/build",
    "build": "npm-run-all clean:all build:bulma purge:bulma clean:bulma build:app",
    "dev": "npm-run-all --parallel dev:*",
    "start": "sirv public",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "bulma": "^0.9.1",
    "del-cli": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "purgecss": "^3.1.3",
    "rollup": "^2.35.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.0",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "sirv-cli": "^1.0.10"
  }
}
